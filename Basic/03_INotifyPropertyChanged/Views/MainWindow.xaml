<Window x:Class="INotifyPropertyChangedExample.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:INotifyPropertyChangedExample.ViewModels"
        Title="INotifyPropertyChanged 範例"
        Height="400"
        Width="500"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 姓氏輸入 -->
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="姓氏："
                   VerticalAlignment="Center"
                   FontSize="14"/>
        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="14"
                 Padding="5"
                 Margin="0,5"/>

        <!-- 名字輸入 -->
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="名字："
                   VerticalAlignment="Center"
                   FontSize="14"/>
        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="14"
                 Padding="5"
                 Margin="0,5"/>

        <!-- 年齡輸入 -->
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="年齡："
                   VerticalAlignment="Center"
                   FontSize="14"/>
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="14"
                 Padding="5"
                 Margin="0,5"/>

        <!-- 顯示結果 -->
        <Border Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Background="#ECF0F1"
                Padding="15"
                CornerRadius="5">
            <StackPanel>
                <TextBlock Text="即時更新結果："
                           FontSize="12"
                           Foreground="Gray"
                           Margin="0,0,0,10"/>
                <TextBlock FontSize="16"
                           Foreground="#2C3E50">
                    <Run Text="全名："/>
                    <Run Text="{Binding FullName, Mode=OneWay}"
                         FontWeight="Bold"
                         Foreground="#3498DB"/>
                </TextBlock>
                <TextBlock FontSize="16"
                           Foreground="#2C3E50"
                           Margin="0,5,0,0">
                    <Run Text="年齡："/>
                    <Run Text="{Binding Age, Mode=OneWay}"
                         FontWeight="Bold"
                         Foreground="#E74C3C"/>
                    <Run Text=" 歲"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
