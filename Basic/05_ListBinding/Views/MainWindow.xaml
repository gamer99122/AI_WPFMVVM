<Window x:Class="ListBindingExample.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ListBindingExample.ViewModels"
        Title="List Binding 範例"
        Height="500"
        Width="700"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 員工列表 -->
        <GroupBox Grid.Column="0"
                  Header="員工列表"
                  Padding="10">
            <DataGrid ItemsSource="{Binding Employees}"
                      SelectedItem="{Binding SelectedEmployee}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding Id}"
                                        Width="50"/>
                    <DataGridTextColumn Header="姓名"
                                        Binding="{Binding Name}"
                                        Width="*"/>
                    <DataGridTextColumn Header="部門"
                                        Binding="{Binding Department}"
                                        Width="*"/>
                    <DataGridTextColumn Header="職位"
                                        Binding="{Binding Position}"
                                        Width="*"/>
                    <DataGridTextColumn Header="薪資"
                                        Binding="{Binding Salary, StringFormat='{}{0:N0}'}"
                                        Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- 詳細資訊 -->
        <GroupBox Grid.Column="2"
                  Header="員工詳細資訊"
                  Padding="10">
            <StackPanel DataContext="{Binding SelectedEmployee}">
                <TextBlock Text="請選擇一個員工查看詳細資訊"
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           Visibility="{Binding Converter={StaticResource NullToVisibilityConverter}}"/>

                <StackPanel Visibility="{Binding Converter={StaticResource NotNullToVisibilityConverter}}">
                    <TextBlock Text="姓名"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Name}"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="部門"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Department}"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="職位"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Position}"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="薪資"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Salary, StringFormat='NT$ {0:N0}'}"
                               Foreground="#27AE60"
                               FontSize="16"
                               FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <!-- 簡化版轉換器，實際使用需要實作 -->
    </Window.Resources>
</Window>
